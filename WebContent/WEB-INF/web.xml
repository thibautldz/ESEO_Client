<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<servlet>
		<servlet-name>AccueilServlet</servlet-name>
		<servlet-class>com.servlets.AccueilServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AccueilServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ListeVilleServlet</servlet-name>
		<servlet-class>com.servlets.ListeVilleServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ListeVilleServlet</servlet-name>
		<url-pattern>/listeville</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ModifierServlet</servlet-name>
		<servlet-class>com.servlets.ModifierServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ModifierServlet</servlet-name>
		<url-pattern>/listeville/modifier</url-pattern>
	</servlet-mapping>
	
	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
		</jsp-property-group>
	</jsp-config>
</web-app>